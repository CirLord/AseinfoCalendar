                @Html.EditorFor(model => model.etp_objetivo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.etp_objetivo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.pln_codigo, "Plan", htmlAttributes: new { @class = "control-label col-md-2" })
