                @Html.ValidationMessageFor(model => model.etp_descripciom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.etp_objetivo, "Objetivo", htmlAttributes: new { @class = "control-label col-md-2" })
