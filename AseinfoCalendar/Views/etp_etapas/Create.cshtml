<div>
    
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script type="text/javascript">
            $(function () {
                $('#etp_fecha_inicio').datetimepicker({
                    format: 'YYYY-MM-DD'
                });
                $('#etp_fecha_fin').datetimepicker({
                    format: 'YYYY-MM-DD'
                });
            });
</script>
}

