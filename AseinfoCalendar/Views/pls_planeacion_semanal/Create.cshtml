<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">
            $(function () {
                $('#pls_fecha').datetimepicker({
                    format: 'YYYY-MM-DD'
                });
                $('#pls_hora_desde').datetimepicker({
                    format: 'HH:mm'
                });
                $('#pls_hora_hasta').datetimepicker({
